<div class="max-w-4xl mx-auto ">
    <header class="mb-6 ">
        <h1 class="text-2xl font-semibold">{{page.title}}</h1>
        <time class="text-lg italic">{{page.published_at | date: '%d %B, %Y'}}</time>
    </header>

    <main class="prose prose-xl max-w-none prose-headings:text-red-500 prose-video:aspect-video">
        {{page.content}}
    </main>
</div>

{% schema %}
{
  "name": "Page Content",
  "settings": [
      
  ],
  "templates": ["page"]
}
{% endschema %}